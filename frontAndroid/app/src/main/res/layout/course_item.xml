<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_marginHorizontal="32dp"
    android:layout_marginVertical="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="sans-serif-medium"
            android:text="materia"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/lblDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes"
            app:layout_constraintTop_toBottomOf="@id/lblName"
            app:layout_constraintStart_toStartOf="@id/lblName"/>

        <TextView
            android:id="@+id/lblStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De 8:00"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/lblDay"
            app:layout_constraintTop_toTopOf="@id/lblDay"
            app:layout_constraintBottom_toBottomOf="@id/lblDay"/>

        <TextView
            android:id="@+id/lblEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a 12:00"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/lblStart"
            app:layout_constraintTop_toTopOf="@id/lblDay"
            app:layout_constraintBottom_toBottomOf="@id/lblDay"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>